@using PierresTreats.Models;

<p>@Html.ActionLink("Home", "Index", "Home")</p>

<h1>Current Treats </h1>

<p>@Html.ActionLink("Click to Add a Treat", "Create", "Treats")</p>

@if (@Model.Count == 0)
{
  <h2>There are currently no treats </h2>
}

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new {id = treat.TreatId}) </li>
  }
