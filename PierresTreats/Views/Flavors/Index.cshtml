@using PierresTreats.Models;
<p>@Html.ActionLink("Home", "Index", "Home")</p>

<h1>Current Flavors </h1>

@if (@Model.Count == 0)
{
  <h2>There are currently no flavors </h2>
}

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new {id = flavor.FlavorId}) </li>
  }

<p>@Html.ActionLink("Click to Add a flavor", "Create", "Flavors")</p>
