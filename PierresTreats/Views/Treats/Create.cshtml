@model PierresTreats.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)

  @Html.LabelFor(model => model.TreatDesc, "Description: ")
  @Html.TextBoxFor(model => model.TreatDesc)

  <input type="submit" value="Add new Treat"/>

  <p>@Html.ActionLink("Go back to Treats", "Index")</p>
}
